<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- delivery_sequence.lap -->
  <record id="lap_tree" model="ir.ui.view">
    <field name="name">delivery_sequence.lap.tree</field>
    <field name="model">delivery_sequence.lap</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" string="Nombre de la vuelta" />
      </tree>
    </field>
  </record>

  <record id="lap_form" model="ir.ui.view">
    <field name="name">delivery_sequence.lap.form</field>
    <field name="model">delivery_sequence.lap</field>
    <field name="arch" type="xml">
        <form>
          <sheet>
              <group>
                  <group>
                    <field name="name" string="Nombre de la vuelta" />
                  </group>
              </group>
          </sheet>
      </form>
    </field>
  </record>

  <!-- Actions -->

  <record id="lap_action_window" model="ir.actions.act_window">
    <field name="name">Lista de vueltas</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">delivery_sequence.lap</field>
    <field name="view_mode">tree,kanban,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create your first Lap!
        </p>
    </field>
  </record>


  <!-- Top menu item -->

  <menuitem id="delivery_sequence_root_menu"
    name="Reparto"
    web_icon="delivery_sequence,static/description/icon.png" />

  <!-- menu categories -->

  <menuitem id="delivery_sequence_manager_menu"
    name="Administrar"
    parent="delivery_sequence_root_menu" />

  <!-- actions -->

  <menuitem id="delivery_sequence_lap_list_menu"
    name="Lista de vueltas"
    parent="delivery_sequence_manager_menu"
    action="lap_action_window" />

</odoo>