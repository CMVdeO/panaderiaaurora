<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_tree_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.tree.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="mrp_production_team_ids" />
            </field>
        </field>
    </record>

    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="mrp_production_team_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>

</odoo>